<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D23CAA"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="140dp"
        app:srcCompat="@drawable/_c842737b_d10d_40e4_b6ce_e424781016cb_removebg_preview" />






    <RelativeLayout
        android:layout_below="@id/imageView2"
        android:layout_width="280dp"
        android:background="@drawable/layout"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Existing"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_alignBaseline="@id/textView"
            android:layout_marginLeft="170dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/b1"
            android:text="New User" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_centerHorizontal="true"
        android:layout_height="270dp"
        android:background="@drawable/layout"
        android:layout_below="@id/imageView2"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextText5"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Username"
            android:drawableEnd="@drawable/baseline_perm_identity_24"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:hint="Email"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/baseline_mail_outline_24"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextTextPassword4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Password"
            android:drawableEnd="@drawable/baseline_lock_open_24"
            android:ems="10"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextTextPassword5"
            android:layout_margin="8dp"
            android:hint="Comfrim Password"
            android:drawableEnd="@drawable/baseline_lock_open_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
    android:layout_centerHorizontal="true"
        android:layout_marginTop="735dp"
android:background="@drawable/b1"
android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Sign Up" />






</RelativeLayout>
